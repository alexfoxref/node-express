<div class="row">

    <div class="col s6 offset-s3">

        {{!-- проверка на сообщение об ошибке из connect-flash --}}
        {{#if error}}
            <p class="alert">{{error}}</p>
        {{/if}}

        <h2>{{title}}</h2>
        <form action="/auth/reset" method="POST" novalidate>
            <div class="input-field">
                <input id="email" name="email" type="email" class="validate" required value="{{data.email}}">
                <label for="email">Email</label>
                <span class="helper-text" data-error="Введите email"></span>
            </div>

            {{!-- для csrf защиты (name="_csrf") --}}
            <input type="hidden" name="_csrf" value={{csrf}}>

            <button type="submit" class="btn btn-primary">Сбросить</button>
        </form>
    </div>
    
</div>
