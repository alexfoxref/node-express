<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6 active"><a href="#login">Войти</a></li>
                <li class="tab col s6"><a href="#register">Регистрация</a></li>
            </ul>
        </div>

        <div id="login" class="col s6 offset-s3">

            {{!-- проверка на сообщение об ошибке из connect-flash --}}
            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}

            <h2>Войти в магазин</h2>
            <form action="/auth/login" method="POST" novalidate>
                <div class="input-field">
                    <input id="email" name="lemail" type="email" class="validate" required value="{{data.email}}">
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field">
                    <input id="password" name="lpassword" type="password" class="validate" required value="{{data.password}}">
                    <label for="password">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                {{!-- для csrf защиты (name="_csrf") --}}
                <input type="hidden" name="_csrf" value={{csrf}}>

                <p><a href="/auth/reset">Забыли пароль?</a></p>

                <button type="submit" class="btn btn-primary">Войти</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">

            {{!-- проверка на сообщение об ошибке из connect-flash --}}
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}

            <h2>Создать аккаунт</h2>
            {{!-- временно поставим novalidate для проверки валидации на сервере --}}
            <form action="/auth/register" method="POST" novalidate>
                <div class="input-field">
                    <input id="remail" name="remail" type="email" class="validate" required value="{{data.email}}">
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field">
                    <input id="rpassword" name="rpassword" type="password" class="validate" required value="{{data.password}}">
                    <label for="rpassword">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" name="rconfirm" type="password" class="validate" required value="{{data.confirm}}">
                    <label for="confirm">Пароль еще раз</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <div class="input-field">
                    <input id="name" name="rname" type="text" class="validate" required value="{{data.name}}">
                    <label for="name">Ваше имя</label>
                    <span class="helper-text" data-error="Введите имя"></span>
                </div>

                {{!-- для csrf защиты (name="_csrf") --}}
                <input type="hidden" name="_csrf" value={{csrf}}>

                <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>